<% provide(:title, @user.name) %>
	
<div class="center hero-unit rent">
	<div class="row">
		<aside class="col-sm-4">
		  <section>
			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
				<br><%= @user.email %>
			</h1>
		  </section>
		</aside> 
	</div>
	
	
</div>
